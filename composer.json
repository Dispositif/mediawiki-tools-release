{
    "require": {
        "php": ">=5.6.99"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "1.0.0",
        "mediawiki/mediawiki-codesniffer": "26.0.0",
        "phpunit/phpunit": "~4.8"
    },
    "scripts": {
        "lint": "parallel-lint . --exclude vendor --exclude make-tarball-release",
        "phpcs": "phpcs -s -p",
        "fix": "phpcbf",
        "test": [
            "composer lint",
            "phpunit $PHPUNIT_ARGS",
            "composer phpcs"
        ]
    }
}
